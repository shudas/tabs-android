<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/marginTop"
          android:paddingRight="@dimen/marginTop"
          android:layout_marginBottom="@dimen/margin">
    <!--Person Image-->
    <ImageView
            android:id="@+id/personImg"
            android:src="@drawable/face"
            android:layout_width="@dimen/picSize"
            android:layout_height="@dimen/picSize"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin"
            android:contentDescription="@string/image_desc"/>
    <!--Catch up Image-->
  </RelativeLayout>
  <!--Name-->
  <!--Tags-->
  <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin"
          android:layout_marginBottom="@dimen/margin"
          android:layout_marginRight="@dimen/marginTop"
          android:layout_marginLeft="@dimen/marginTop"
          android:orientation="horizontal"
          android:gravity="center">
    <TextView
            android:text="Tag1"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Tag2"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          </LinearLayout>
  <!--Catch up image-->
  <ImageView
          android:src="@drawable/new_tab"
          android:layout_margin="@dimen/margin"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="fitCenter"
          android:contentDescription="@string/new_tab_desc"/>
  <ListView
          android:id="@+id/tabs"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"></ListView>
</LinearLayout>

